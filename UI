local Fluent = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Fluent.txt"))()

local Window = Fluent:CreateWindow({
    Title = "Head Control",
    SubTitle = "by dawid",
    TabWidth = 160,
    Size = UDim2.fromOffset(450, 260),
    Theme = "Dark"
})

local Tab = Window:AddTab({
    Title = "Main",
    Icon = ""
})

Tab:AddToggle({
    Title = "Teleport All Heads",
    Default = false,
    Callback = function(Value)
        _G.HeadTeleport = Value
        while _G.HeadTeleport do
            for _, player in pairs(game.Players:GetPlayers()) do
                if player ~= game.Players.LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
                    player.Character.Head.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, -3)
                end
            end
            task.wait(0.1)
        end
    end
})
