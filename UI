loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Fluent.txt"))()
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local Window = Fluent:CreateWindow({
    Title = "Head Control",
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Theme = "Dark"
})

local KillerTab = Window:AddTab({ Title = "Killer" })

local Toggle = KillerTab:AddToggle("HeadControl", {
    Title = "Teleport All Heads",
    Default = false,
    Callback = function(value)
        _G.HeadTeleport = value
        
        task.spawn(function()
            while _G.HeadTeleport do
                for _, player in ipairs(Players:GetPlayers()) do
                    if player ~= LocalPlayer and player.Character and player.Character:FindFirstChild("Head") then
                        player.Character.Head.CFrame = LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, 0, -3)
                    end
                end
                task.wait(0.1)
            end
        end)
    end
})
